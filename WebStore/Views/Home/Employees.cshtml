
@model IEnumerable<WebStore.Models.Employee>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Сотрудники</title>
</head>
<body>
    <h3>Сотрудники</h3>
    <hr/>
    <table>
        <thead>
            <tr>
                <th>#</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
            </tr>
        </thead>
        <tbody>
           @foreach(var employee in Model)
            {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                @*в качестве переметра в метод передаём нового сотрудника, у которого ИД равен ИД текущего сотрудника*@
                @*таким образом "криво-косо" работает*@
                <td>@Html.ActionLink("Детали", "Details", new { id = @employee.Id }, null)</td>
            </tr>
            }
        </tbody>
    </table>
    <a href="/">Домой</a>
</body>
</html>
